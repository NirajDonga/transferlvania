# Server Configuration
PORT=4000

# Database (REQUIRED)
# PostgreSQL connection string from Neon, Supabase, or local instance
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Environment
NODE_ENV="development"

# TURN Server (Optional - improves connectivity for users behind strict NATs)
# Leave empty to use Google's public STUN server only
# TURN_SERVER="turn.your-domain.com"
# TURN_SECRET="your-turn-server-shared-secret"
# TURNS_ENABLED="true"
