generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FileSession {
  id           String   @id @default(uuid())
  fileName     String
  fileSize     BigInt
  fileType     String
  fileHash     String?
  passwordHash String?
  status       String   @default("waiting")
  createdAt    DateTime @default(now())
}